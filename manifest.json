{
  "manifest_version": 3,
  "name": "Auto CAPTCHA Solver (Educational)",
  "version": "1.0",
  "description": "Simulates solving a fake CAPTCHA for research and testing.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
